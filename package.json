{
  "name": "express-route-explorer",
  "displayName": "Express Route Explorer",
  "description": "Visual map of Express routes (GET/POST/etc.) in your workspace.",
  "version": "0.0.3",
  "publisher": "sujalrana",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.106.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Sujal-Rana-88/express-route-explorer.git"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onView:expressRouteExplorer",
    "onCommand:expressRouteExplorer.refresh",
    "onCommand:expressRouteExplorer.openRoute",
    "onCommand:expressRouteExplorer.tryRoute"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "expressRouteExplorerContainer",
          "title": "Express Routes",
          "icon": "images/light-theme.svg"
        }
      ]
    },
    "views": {
      "expressRouteExplorerContainer": [
        {
          "id": "expressRouteExplorer",
          "name": "Routes"
        }
      ]
    },
    "commands": [
      {
        "command": "expressRouteExplorer.refresh",
        "title": "Refresh Routes",
        "category": "Express Route Explorer"
      },
      {
        "command": "expressRouteExplorer.openRoute",
        "title": "Open Route Handler",
        "category": "Express Route Explorer"
      },
      {
        "command": "expressRouteExplorer.tryRoute",
        "title": "Try This API",
        "category": "Express Route Explorer"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "expressRouteExplorer.refresh",
          "when": "view == expressRouteExplorer",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "expressRouteExplorer.tryRoute",
          "when": "viewItem == expressRoute",
          "group": "inline"
        },
        {
          "command": "expressRouteExplorer.openRoute",
          "when": "viewItem == expressRoute",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "echo \"No lint configured\"",
    "test": "echo \"No tests yet\""
  },
  "devDependencies": {
    "@types/node": "^22.19.1",
    "@types/vscode": "^1.106.1",
    "typescript": "^5.9.3"
  }
}
